# Base environment configuration for AI Assistant
ENV="production"

# Development/production Settings
RELOAD=False
WORKERS=1

# Database Configuration
DB_PATH=assistant_memory.db
DATABASE_URL=sqlite:///./assistant_memory.db

# JWT Authentication and Security
SECRET_KEY="your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-and-random"  
ENCRYPTION_KEY=your-encryption-key 
JWT_ALGORITHM=HS256

# Optional: JWT access token expiry in minutes (default: 10080 = 1 week)
# If not set, tokens will expire in 1 week.
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application Configuration
BASE_URL=http://0.0.0.0:8005
DEBUG=False
LOG_LEVEL=INFO

# Pixel Streaming Configuration
# For local development, set to your local pixel streaming server
# For production, set to your deployed pixel streaming server
PIXEL_STREAM_URL=http://localhost/uiless.html

# MCP Server Configuration
# For local development, set to your local MCP server
# For production, set to your deployed MCP server
MCP_SERVER_URL=http://localhost:3001/sse

# LLM Configuration
LLM_PROVIDER="ollama"
OLLAMA_BASE_URL="http://localhost:11434/v1"
OLLAMA_API_KEY="ollama"
OLLAMA_MODEL="llama3.1:latest"

# Store payments (Immutable)
MERCHANT_ADDRESS=merchant-address
IMX_TESTNET_RPC=immutable-testnet-address
IMX_TOKEN_CONTRACT=token-contract
IMX_MINTER_PRIVATE_KEY=your-private-key
